---
type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Jai RPG",
  description = "Tu universo personal gamificado",
} = Astro.props as Props;

const BASE = import.meta.env.BASE_URL || "/";
const currentPath = Astro.url.pathname;

const withBase = (path: string) => {
  const clean = String(path || "").replace(/^\//, "");
  return `${BASE}${clean}`;
};

const normalize = (p: string) => {
  const s = (p || "/").replace(/\/+$/, "");
  return s === "" ? "/" : s;
};

const isActive = (href: string) => normalize(currentPath) === normalize(withBase(href));

// ✅ Home al medio + SIN duplicar /rpg/
const navItems = [
  { label: "blog", href: "blog/", icon: "theme/icons/blog.gif" },
  { label: "home", href: "", icon: "theme/icons/home.gif" },
  { label: "rpg", href: "rpg/", icon: "theme/icons/rpg.gif" },
];

// ✅ IMPORTANTE: tus archivos están en public/theme/
const BG = withBase("theme/bg.jpg");
const HEADER = withBase("theme/header.png");
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style>
      :root{
        --text: rgba(255,255,255,.92);
        --muted: rgba(255,255,255,.70);
        --stroke2: rgba(150,190,255,.45);
        --shadow: 0 18px 60px rgba(0,0,0,.65);
      }

      html,body{height:100%}
      body{
        margin:0;
        color:var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;

        /* ✅ Fondo estable (sin url(var(--...))) */
        background-image:
          radial-gradient(900px 700px at 70% 15%, rgba(120,120,255,.14), transparent 60%),
          radial-gradient(900px 700px at 18% 82%, rgba(0,255,200,.10), transparent 60%),
          url("{BG}");
        background-size: auto, auto, cover;
        background-position: center, center, center;
        background-attachment: fixed;
        background-color: #05060a;
      }

      .wrap{ min-height:100%; display:flex; flex-direction:column; }

      header{
        padding: 26px 18px 10px;
        display:flex;
        justify-content:center;
      }

      .headerInner{
        width:min(1100px, 100%);
        display:flex;
        justify-content:center;
      }

      .brand img{
        width: min(560px, 92vw);
        height:auto;
        filter: drop-shadow(0 18px 40px rgba(0,0,0,.6));
      }

      main{
        flex:1;
        padding: 14px 18px 36px;
        display:flex;
        justify-content:center;
      }

      .container{
        width:min(1100px, 100%);
        display:flex;
        flex-direction:column;
        gap:18px;
      }

      .launcherWrap{
        border-radius: 34px;
        border: 1px solid rgba(255,255,255,.12);
        background: rgba(0,0,0,.20);
        box-shadow: var(--shadow);
        padding: 22px;
        backdrop-filter: blur(12px);
      }

      .launcher{
        display:grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 20px;
        align-items: stretch;
      }

      .navCard{
        display:grid;
        grid-template-rows: 1fr auto;
        gap: 14px;
        padding: 18px;
        border-radius: 32px;
        border: 1px solid rgba(255,255,255,.12);
        background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(0,0,0,.22));
        text-decoration:none;
        color: var(--text);
        box-shadow: 0 12px 40px rgba(0,0,0,.35);
        transition: transform 160ms ease, border-color 160ms ease, background 160ms ease;
        overflow:hidden;
      }

      .navCard:hover{
        transform: translateY(-2px);
        border-color: rgba(255,255,255,.22);
        background: linear-gradient(180deg, rgba(255,255,255,.08), rgba(0,0,0,.24));
      }

      .navCard.active{
        border-color: var(--stroke2);
        box-shadow: 0 20px 70px rgba(0,0,0,.55);
      }

      .navMedia{
        border-radius: 26px;
        border: 1px solid rgba(255,255,255,.12);
        background: rgba(0,0,0,.22);
        display:grid;
        place-items:center;
        min-height: 220px;
      }

      .navMedia img{
        width: 160px;
        height: 160px;
        object-fit: contain;
        filter: drop-shadow(0 18px 30px rgba(0,0,0,.55));
      }

      .navLabelRow{
        display:flex;
        align-items:center;
        justify-content:center;
        gap: 10px;
        padding-bottom: 4px;
      }

      .navLabel{
        font-size: 22px;
        text-transform: lowercase;
        opacity:.92;
      }

      .dot{
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: rgba(255,255,255,.35);
      }

      .navCard.active .dot{
        background: rgba(120,190,255,.90);
        box-shadow: 0 0 0 6px rgba(120,190,255,.18);
      }

      .panel{
        border-radius: 34px;
        border: 1px solid rgba(255,255,255,.12);
        background: rgba(0,0,0,.18);
        box-shadow: var(--shadow);
        padding: 22px;
        backdrop-filter: blur(12px);
      }

      .panel :global(h1){ margin: 0 0 10px; font-size: 34px; }
      .panel :global(p){ margin: 10px 0; color: rgba(255,255,255,.82); line-height: 1.65; }

      footer{
        padding: 14px 18px 22px;
        display:flex;
        justify-content:center;
        color: rgba(255,255,255,.55);
        font-size:12px;
      }

      @media (max-width: 980px){
        .launcher{ grid-template-columns: 1fr; }
        .navMedia{ min-height: 200px; }
        .navMedia img{ width: 140px; height: 140px; }
        .panel :global(h1){ font-size: 28px; }
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header>
        <div class="headerInner">
          <div class="brand">
            <img src={HEADER} alt={title} loading="eager" />
          </div>
        </div>
      </header>

      <main>
        <div class="container">
          <section class="launcherWrap" aria-label="Launcher">
            <div class="launcher">
              {navItems.map((item) => (
                <a
                  class={"navCard" + (isActive(item.href) ? " active" : "")}
                  href={withBase(item.href)}
                >
                  <div class="navMedia">
                    <img src={withBase(item.icon)} alt={item.label} loading="eager" />
                  </div>
                  <div class="navLabelRow">
                    <div class="navLabel">{item.label}</div>
                    <span class="dot" aria-hidden="true"></span>
                  </div>
                </a>
              ))}
            </div>
          </section>

          <section class="panel">
            <slot />
          </section>
        </div>
      </main>

      <footer>Jaira Life RPG · GitHub Pages</footer>
    </div>
  </body>
</html>
