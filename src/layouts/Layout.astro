---
type Props = {
  title?: string;
  description?: string;
};

const {
  title = "Jaira Life RPG",
  description = "Tu universo personal gamificado",
} = Astro.props as Props;

const BASE = import.meta.env.BASE_URL || "/";
const currentPath = Astro.url.pathname;

const withBase = (path: string) => {
  const clean = path.replace(/^\//, "");
  return `${BASE}${clean}`;
};

const normalize = (p: string) => p.replace(/\/+$/, "") || "/";
const isActive = (href: string) => normalize(currentPath) === normalize(withBase(href));

/**
 * ✅ HOME EN EL MEDIO (como me pediste)
 * ✅ assets en /public/... (Astro los sirve tal cual)
 */
const navItems = [
  { label: "blog", href: "/blog/", icon: "/theme/icons/blog.gif" },
  { label: "home", href: "/", icon: "/theme/icons/home.gif" },
  { label: "rpg", href: "/rpg/", icon: "/theme/icons/rpg.gif" },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>

    <style>
      :root{
        --bg: #05050a;
        --txt: rgba(255,255,255,.92);
        --muted: rgba(255,255,255,.66);
        --glass: rgba(12,12,18,.46);
        --glass2: rgba(20,20,30,.55);
        --stroke: rgba(255,255,255,.16);
        --stroke2: rgba(170,180,255,.28);
        --shadow: 0 22px 70px rgba(0,0,0,.62);
        --r: 26px;
      }

      html,body{ height:100%; }
      body{
        margin:0;
        color:var(--txt);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        background:
          radial-gradient(1100px 740px at 70% 15%, rgba(120,120,255,.18), transparent 55%),
          radial-gradient(900px 680px at 18% 86%, rgba(0,255,200,.10), transparent 55%),
          url("{withBase("/bg.jpg")}");
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
      }

      .wrap{
        min-height:100%;
        display:flex;
        flex-direction:column;
      }

      header{
        padding: 26px 18px 10px;
        display:flex;
        justify-content:center;
      }

      .headerInner{
        width:min(1080px, 100%);
        display:flex;
        justify-content:center;
        align-items:center;
      }

      .logo{
        width: 260px;
        max-width: 70vw;
        height: auto;
        filter: drop-shadow(0 10px 28px rgba(0,0,0,.65));
        opacity: .98;
      }

      main{
        flex:1;
        display:flex;
        justify-content:center;
        padding: 18px 18px 40px;
      }

      .container{
        width:min(1080px, 100%);
        display:flex;
        flex-direction:column;
        gap: 18px;
      }

      .launcherShell{
        background: linear-gradient(180deg, rgba(255,255,255,.06), rgba(255,255,255,.03));
        border: 1px solid var(--stroke);
        border-radius: 34px;
        box-shadow: var(--shadow);
        padding: 26px;
        backdrop-filter: blur(10px);
      }

      .launcherGrid{
        display:grid;
        grid-template-columns: repeat(3, minmax(0, 1fr));
        gap: 18px;
        align-items: stretch;
      }

      .navCard{
        text-decoration:none;
        color: var(--txt);
        background: var(--glass);
        border: 1px solid rgba(255,255,255,.14);
        border-radius: 28px;
        box-shadow: 0 18px 60px rgba(0,0,0,.38);
        padding: 18px;
        position: relative;
        overflow:hidden;
        transition: transform 140ms ease, border-color 140ms ease, background 140ms ease;
      }

      .navCard:hover{
        transform: translateY(-2px);
        border-color: rgba(210,220,255,.40);
        background: var(--glass2);
      }

      .navCard.active{
        border-color: var(--stroke2);
        box-shadow: 0 22px 80px rgba(0,0,0,.52);
      }

      .iconArea{
        height: 210px;
        border-radius: 22px;
        background: rgba(0,0,0,.22);
        border: 1px solid rgba(255,255,255,.12);
        display:grid;
        place-items:center;
        overflow:hidden;
      }

      .iconArea img{
        width: 150px;
        height: 150px;
        object-fit: contain;
        image-rendering: auto; /* tus gifs son normales, no pixelart */
        filter: drop-shadow(0 14px 40px rgba(0,0,0,.55));
      }

      .labelRow{
        display:flex;
        align-items:center;
        justify-content:space-between;
        padding: 14px 6px 2px;
        gap: 10px;
      }

      .labelRow .label{
        font-size: 22px;
        letter-spacing: .3px;
        text-transform: lowercase;
        opacity: .96;
      }

      .dot{
        width: 10px;
        height: 10px;
        border-radius: 999px;
        background: rgba(255,255,255,.26);
      }

      .navCard.active .dot{
        background: rgba(150,190,255,.85);
        box-shadow: 0 0 0 6px rgba(150,190,255,.18);
      }

      .panel{
        background: rgba(8,8,12,.50);
        border: 1px solid rgba(255,255,255,.12);
        border-radius: 28px;
        box-shadow: 0 18px 70px rgba(0,0,0,.44);
        padding: 22px;
        backdrop-filter: blur(10px);
      }

      /* contenido */
      .panel :global(h1){ margin: 0 0 10px; font-size: 34px; }
      .panel :global(p){ margin: 10px 0; color: rgba(255,255,255,.80); line-height: 1.6; }

      footer{
        padding: 14px 18px 22px;
        display:flex;
        justify-content:center;
        color: var(--muted);
        font-size: 12px;
      }

      @media (max-width: 900px){
        .launcherGrid{ grid-template-columns: 1fr; }
        .iconArea{ height: 190px; }
        .iconArea img{ width: 140px; height: 140px; }
      }
    </style>
  </head>

  <body>
    <div class="wrap">
      <header>
        <div class="headerInner">
          <img class="logo" src={withBase("/header.png")} alt="Jai RPG" />
        </div>
      </header>

      <main>
        <div class="container">
          <section class="launcherShell">
            <div class="launcherGrid">
              {navItems.map((item) => (
                <a class={"navCard" + (isActive(item.href) ? " active" : "")} href={withBase(item.href)}>
                  <div class="iconArea">
                    <img src={withBase(item.icon)} alt={item.label} loading="eager" />
                  </div>
                  <div class="labelRow">
                    <div class="label">{item.label}</div>
                    <div class="dot"></div>
                  </div>
                </a>
              ))}
            </div>
          </section>

          <section class="panel">
            <slot />
          </section>
        </div>
      </main>

      <footer>Jaira Life RPG · GitHub Pages</footer>
    </div>
  </body>
</html>
