---
const BASE = import.meta.env.BASE_URL || "/";

const withBase = (path: string) => {
  const clean = String(path || "").replace(/^\//, "");
  return `${BASE}${clean}`;
};

// ✅ Ajuste: si tus assets están en public/theme/...
const BG = withBase("theme/bg.jpg");
const HEADER = withBase("theme/header.png");

// ✅ Home al medio SIEMPRE, y sin duplicar /rpg/
const tiles = [
  { label: "blog", href: "blog/", icon: "theme/icons/blog.gif" },
  { label: "home", href: "", icon: "theme/icons/home.gif", home: true },
  { label: "rpg", href: "rpg/", icon: "theme/icons/rpg.gif" },
];
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Jaira Life RPG</title>

    <style>
      :root{
        --text: rgba(255,255,255,.94);
        --muted: rgba(255,255,255,.78);
        --glowA: rgba(120,220,255,.55);
        --glowB: rgba(255,90,210,.35);
        --frame: rgba(255,255,255,.22);
        --frame2: rgba(255,255,255,.10);
        --shadow: rgba(0,0,0,.72);
      }

      *{ box-sizing:border-box; }
      html,body{height:100%;}
      body{
        margin:0;
        color:var(--text);
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        background:#050508;
        overflow-x:hidden;
      }

      /* ✅ Fondo protagonista (TU BG) + luces 2000s + scanlines */
      .bg{
        position: fixed;
        inset: 0;
        z-index: -3;
        background-image: url("{BG}");
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        filter: saturate(1.05) contrast(1.06);
        transform: scale(1.03);
      }
      .bg::before{
        content:"";
        position:absolute;
        inset:-40px;
        background:
          radial-gradient(780px 520px at 20% 18%, var(--glowA), transparent 60%),
          radial-gradient(720px 520px at 82% 70%, var(--glowB), transparent 60%),
          linear-gradient(180deg, rgba(0,0,0,.25), rgba(0,0,0,.65));
        opacity:.95;
      }
      .bg::after{
        content:"";
        position:absolute;
        inset:0;
        pointer-events:none;
        opacity:.16;
        background:
          repeating-linear-gradient(
            to bottom,
            rgba(255,255,255,.06),
            rgba(255,255,255,.06) 1px,
            transparent 2px,
            transparent 4px
          );
        mix-blend-mode: overlay;
      }

      /* Contenedor general */
      .landing{
        min-height: 100vh;
        display:flex;
        flex-direction:column;
        align-items:center;
        justify-content:center;
        padding: 24px 18px 40px;
        gap: 18px;
      }

      /* Marco glossy estilo blog 2000s */
      .frame{
        width: min(1120px, 100%);
        padding: 18px 16px 22px;
        border-radius: 22px;
        border: 1px solid var(--frame);
        background: linear-gradient(180deg, rgba(255,255,255,.12), rgba(255,255,255,.05));
        box-shadow: 0 22px 70px rgba(0,0,0,.6), 0 0 0 1px rgba(255,255,255,.06) inset;
        position: relative;
      }
      .frame::before{
        content:"";
        position:absolute;
        inset: 10px;
        border-radius: 16px;
        border: 1px solid var(--frame2);
        pointer-events:none;
      }
      .frame::after{
        content:"";
        position:absolute;
        inset:0;
        border-radius: 22px;
        pointer-events:none;
        background: radial-gradient(900px 380px at 50% 0%, rgba(255,255,255,.16), transparent 55%);
        mix-blend-mode: screen;
        opacity:.8;
      }

      /* Header imagen */
      .logo{
        width: min(720px, 92%);
        margin: 2px auto 12px;
        border-radius: 16px;
        overflow:hidden;
        box-shadow: 0 18px 60px rgba(0,0,0,.55);
        position: relative;
        z-index: 2;
      }
      .logo img{ width:100%; height:auto; display:block; }

      /* Sparklies flotantes */
      .float{
        position:absolute;
        inset:0;
        pointer-events:none;
        z-index: 1;
      }
      .spark{
        position:absolute;
        width: 14px;
        height: 14px;
        border-radius: 50%;
        background: rgba(255,255,255,.92);
        filter: drop-shadow(0 0 14px rgba(255,255,255,.55));
        opacity:.42;
        animation: drift 6s ease-in-out infinite;
      }
      .spark:nth-child(1){ top: 16%; left: 10%; animation-delay: .2s; }
      .spark:nth-child(2){ top: 38%; left: 88%; animation-delay: 1.0s; }
      .spark:nth-child(3){ top: 78%; left: 22%; animation-delay: 1.8s; }
      .spark:nth-child(4){ top: 66%; left: 74%; animation-delay: 2.4s; }
      .spark:nth-child(5){ top: 28%; left: 56%; animation-delay: 3.0s; }

      @keyframes drift{
        0%,100%{ transform: translateY(0px) translateX(0px); opacity:.32; }
        50%{ transform: translateY(-14px) translateX(10px); opacity:.55; }
      }

      /* Dock de “stickers” (no cards modernas) */
      .center{
        width: min(1040px, 100%);
        display:flex;
        align-items:center;
        justify-content:center;
        gap: 18px;
        flex-wrap: wrap;
        position: relative;
        z-index: 2;
        padding: 6px 6px 2px;
      }

      a.tile{
        width: min(330px, 92vw);
        height: 200px;
        border-radius: 26px;
        border: 2px solid rgba(255,255,255,.22);
        background:
          linear-gradient(180deg, rgba(255,255,255,.14), rgba(255,255,255,.06)),
          radial-gradient(240px 140px at 30% 18%, rgba(255,255,255,.16), transparent 60%);
        box-shadow:
          0 20px 46px rgba(0,0,0,.6),
          0 0 0 2px rgba(0,0,0,.25) inset,
          0 0 34px rgba(120,220,255,.20);
        text-decoration:none;
        color: var(--text);
        display:flex;
        align-items:center;
        justify-content:center;
        position: relative;
        overflow:hidden;
        transition: transform 140ms ease, filter 140ms ease, box-shadow 140ms ease;
      }

      /* brillo diagonal glossy */
      a.tile::before{
        content:"";
        position:absolute;
        inset:-40px;
        background: linear-gradient(135deg, transparent 40%, rgba(255,255,255,.18) 50%, transparent 60%);
        transform: translateX(-30%);
        opacity:.75;
        pointer-events:none;
      }

      a.tile:hover{
        transform: translateY(-6px) scale(1.01);
        filter: saturate(1.06);
        box-shadow:
          0 28px 66px rgba(0,0,0,.66),
          0 0 0 2px rgba(0,0,0,.25) inset,
          0 0 46px rgba(120,220,255,.30);
      }
      a.tile:active{ transform: translateY(-2px) scale(.995); }

      /* Icono flotando */
      .tileTop{
        width: 100%;
        height: 100%;
        display:grid;
        place-items:center;
      }
      .tileTop img{
        width: 120px;
        height: 120px;
        object-fit: contain;
        filter: drop-shadow(0 16px 16px rgba(0,0,0,.70));
        animation: floaty 3.2s ease-in-out infinite;
      }
      /* Home más grande */
      a.tile.home .tileTop img{ width: 145px; height: 145px; }

      @keyframes floaty{
        0%,100%{ transform: translateY(0px); }
        50%{ transform: translateY(-10px); }
      }

      .tileBottom{
        position:absolute;
        bottom: 12px;
        left: 14px;
        right: 14px;
        display:flex;
        justify-content:center;
        font-size: 14px;
        text-transform: lowercase;
        letter-spacing: .10em;
        text-shadow: 0 10px 40px rgba(0,0,0,.65);
        opacity:.95;
      }

      .text{
        width: min(980px, 100%);
        padding: 8px 10px 0;
        position: relative;
        z-index: 2;
      }
      .text h1{
        margin: 10px 0 0;
        font-size: 40px;
        text-shadow: 0 10px 40px rgba(0,0,0,.55);
      }
      .text p{
        margin: 10px 0 0;
        color: var(--muted);
        font-size: 16px;
        line-height: 1.65;
        text-shadow: 0 10px 40px rgba(0,0,0,.55);
      }

      @media (max-width: 980px){
        a.tile{ height: 180px; }
        .tileTop img{ width: 112px; height: 112px; }
        a.tile.home .tileTop img{ width: 132px; height: 132px; }
        .text h1{ font-size: 34px; }
      }
    </style>
  </head>

  <body>
    <div class="bg" aria-hidden="true"></div>

    <div class="landing">
      <main class="frame">
        <div class="float" aria-hidden="true">
          <span class="spark"></span><span class="spark"></span><span class="spark"></span><span class="spark"></span><span class="spark"></span>
        </div>

        <div class="logo">
          <img src={HEADER} alt="Jai RPG" loading="eager" />
        </div>

        <div class="center">
          {tiles.map((t) => (
            <a class={`tile ${t.home ? "home" : ""}`} href={withBase(t.href)}>
              <div class="tileTop">
                <img src={withBase(t.icon)} alt={t.label} loading="eager" />
              </div>
              <div class="tileBottom">{t.label}</div>
            </a>
          ))}
        </div>

        <div class="text">
          <h1>Home</h1>
          <p>Bienvenida. Acá después armamos el dashboard: quests, hábitos, stats y notas rápidas.</p>
        </div>
      </main>
    </div>
  </body>
</html>
